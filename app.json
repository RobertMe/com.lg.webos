{
	"id": "com.lg.webos",
	"version": "0.9.0",
	"name": {
		"en": "LG webOS"
	},
	"description": {
		"en": "Control your LG webOS TV"
	},
	"category": "video",
	"compatibility": "0.x || 1.x",
	"images": {
		"large": "./assets/images/large.jpg",
		"small": "./assets/images/small.jpg"
	},
	"drivers": [
		{
			"id": "tv",
			"class": "tv",
			"capabilities": [ "onoff", "channel", "volume_setpoint" ],
			"name": {
				"en": "LG webOS TV"
			},
			"images": {
				"large": "./drivers/tv/assets/images/large.jpg",
				"small": "./drivers/tv/assets/images/small.jpg"
			},
			"pair": [
		        {
		            "id": "list_devices",
		            "template": "list_devices",
		            "navigation": {
		                "next": "accept_and_add"
		            }
		        },
		        {
		            "id": "accept_and_add"
		        }
		    ]
		}
	],
	"flow": {
		"actions": [
			{
				"id": "set_channel",
				"title": {
					"en": "Set TV to channel"
				},
				"args": [
					{
						"name": "tv",
						"placeholder": {
							"en": "TV"
						},
						"type": "device",
						"filter": "driver_id=tv"
					},
					{
						"name": "channel",
						"placeholder": {
							"en": "Channel"
						},
						"type": "autocomplete"
					}
				]
			},
			{
				"id": "set_input",
				"title": {
					"en": "Set TV input"
				},
				"args": [
					{
						"name": "tv",
						"placeholder": {
							"en": "TV"
						},
						"type": "device",
						"filter": "driver_id=tv"
					},
					{
						"name": "input",
						"placeholder": {
							"en": "Input"
						},
						"type": "autocomplete"
					}
				]
			},
			{
				"id": "set_volume",
				"title": {
					"en": "Set TV volume"
				},
				"args": [
					{
						"name": "tv",
						"placeholder": {
							"en": "TV"
						},
						"type": "device",
						"filter": "driver_id=tv"
					},
					{
						"name": "volume",
						"type": "range",
						"min": 0,
						"max": 100,
						"step": 1,
						"label": "%"
					}
				]
			},
			{
				"id": "set_mute_true",
				"title": {
					"en": "Mute TV volume"
				},
				"args": [
					{
						"name": "tv",
						"placeholder": {
							"en": "TV"
						},
						"type": "device",
						"filter": "driver_id=tv"
					}
				]
			},
			{
				"id": "set_mute_false",
				"title": {
					"en": "Unmute TV volume"
				},
				"args": [
					{
						"name": "tv",
						"placeholder": {
							"en": "TV"
						},
						"type": "device",
						"filter": "driver_id=tv"
					}
				]
			},
			{
				"id": "show_float",
				"title": {
					"en": "Show a message on the TV"
				},
				"args": [
					{
						"name": "tv",
						"placeholder": {
							"en": "TV"
						},
						"type": "device",
						"filter": "driver_id=tv"
					},
					{
						"name": "message",
						"type": "text",
						"placeholder": {
							"en": "Your message..."
						},
						"type": "text"
					}
				]
			},
			{
				"id": "poweroff",
				"title": {
					"en": "Turn the TV off"
				},
				"args": [
					{
						"name": "tv",
						"placeholder": {
							"en": "TV"
						},
						"type": "device",
						"filter": "driver_id=tv"
					}
				]
			}
		]
	}
}